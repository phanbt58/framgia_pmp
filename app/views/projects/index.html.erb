<div id="projects">
  <h2>
    <%= t "layout.projects" %>
    <% if can? :create, Project %>
      <%= link_to new_project_path, class: "btn btn-info pull-right",
        title: t("projects.new") do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </h2>
  <% if @projects.any? %>
    <table class="table table-striped" id="tbl-list-project">
      <thead>
        <tr>
          <th class="id"><%= t "projects.table.thead.id" %></th>
          <th class="name"><%= t "projects.table.thead.name" %></th>
          <th class="description"><%= t "projects.table.thead.description" %></th>
          <th class="manager"><%= t "projects.table.thead.manager" %></th>
          <th class="start-date"><%= t "projects.table.thead.start_date" %></th>
          <th class="end-date"><%= t "projects.table.thead.end_date" %></th>
        </tr>
      </thead>
      <% @projects.each_with_index do |project, index| %>
        <tr>
          <td class="id"><%= index + 1 %></td>
          <td class="name"><%= link_to project.name, project_path(project) %></td>
          <td class="description"><%= project.description %></td>
          <td class="manager">
            <% project.managers.each_with_index do |manager, index| %>
              <%= link_to manager.user_name, "#" %>
              <%= (index == project.managers.size - 1)  ? "" : "," %>
            <% end %>
          </td>
          <td class="start-date"><%= project.start_date %></td>
          <td class="end-date"><%= project.end_date %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
