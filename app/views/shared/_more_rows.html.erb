<div id="more-rows" class="hide">
  <table>
    <% (@activities.count..@activities.count+5).each do |row| %>
      <tr>
        <td><input type="text"/></td>
        <td><input type="text"/></td>
        <td><input type="text"/></td>
        <td><input type="text"/></td>
        <td><input type="number" value="0" class="remaining row-<%= row %>"/></td>
        <td><input type="number" value="0" class="estimate row-<%= row %>"/></td>
        <% (1..@log_works_count).each do |index| %>
          <td class="panel-left">
            <input type="number" class="log-<%= index %> row-<%= row %>" value="0"/>
          </td>
        <% end %>
        <% (@log_works_count..8).each do |index| %>
          <td class="panel-left">
            <input type="number" class="log-<%= index+1 %> row-<%= row %>" value="0"/>
          </td>
        <% end %>
    <% end %>
  </table>
</div>
